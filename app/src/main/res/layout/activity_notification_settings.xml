<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.setting.AccountSettings">

    <RelativeLayout
        android:id="@+id/relative_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:background="@color/colorPrimary">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:fontFamily="@font/poppins_medium"
            android:text="Notifications"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:visibility="visible"
            tools:ignore="RelativeOverlap" />


    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/relative_header"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/gray_light" />


    <RelativeLayout
        android:id="@+id/conversation_tones_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/story_privacy_img"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/conversation_tones" />

        <TextView
            android:id="@+id/conversation_tones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toEndOf="@+id/story_privacy_img"
            android:fontFamily="@font/poppins_regular"
            android:text="Conversation Tones"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/conversation_tones"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toEndOf="@+id/story_privacy_img"
            android:fontFamily="@font/poppins_regular"
            android:text="Play sound for incoming and outcoming messages"
            android:textColor="@color/lightGray"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>

    <View
        android:id="@+id/view_conversation_tones"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/conversation_tones_relative"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/gray_light" />


    <RelativeLayout
        android:id="@+id/message_notification_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@+id/view_conversation_tones"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/notification_img"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:src="@drawable/massage_notifications" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toEndOf="@+id/notification_img"
            android:fontFamily="@font/poppins_regular"
            android:text="Message Notifications "
            android:textColor="@color/grey"
            android:textSize="@dimen/sp_20" />

    </RelativeLayout>

    <View
        android:id="@+id/view_message_notifications"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/message_notification_relative"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/gray_light" />

    <RelativeLayout
        android:id="@+id/notification_tones_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_message_notifications"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/notification_tone_img"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/notification_tone" />

        <TextView
            android:id="@+id/notification_tones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toEndOf="@+id/notification_tone_img"
            android:fontFamily="@font/poppins_regular"
            android:text="Notification tone"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notification_tones"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toEndOf="@+id/notification_tone_img"
            android:fontFamily="@font/poppins_regular"
            android:text="Default ringtone (skyline)"
            android:textColor="@color/lightGray"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>

    <View
        android:id="@+id/view_notification_tone"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/notification_tones_relative"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/gray_light" />

    <RelativeLayout
        android:id="@+id/vibrate_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_notification_tone"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/vibrate_img"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/vibrate" />

        <TextView
            android:id="@+id/vibrate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toEndOf="@+id/vibrate_img"
            android:fontFamily="@font/poppins_regular"
            android:text="Vibrate"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vibrate_text"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toEndOf="@+id/vibrate_img"
            android:fontFamily="@font/poppins_regular"
            android:text="Default"
            android:textColor="@color/lightGray"
            android:textSize="@dimen/sp_16" />

    </RelativeLayout>

    <View
        android:id="@+id/view_vibrate"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/vibrate_relative"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/gray_light" />

    <RelativeLayout
        android:id="@+id/group_notifications_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@+id/view_vibrate"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/group_image"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:src="@drawable/group_notifications" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toEndOf="@+id/group_image"
            android:fontFamily="@font/poppins_regular"
            android:text="Group Notifications "
            android:textColor="@color/grey"
            android:textSize="@dimen/sp_20" />

    </RelativeLayout>

    <View
        android:id="@+id/view_group_notifications"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/group_notifications_relative"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/gray_light" />

    <RelativeLayout
        android:id="@+id/call_notifications_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@+id/view_group_notifications"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/call_image"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:src="@drawable/call_notifications" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toEndOf="@+id/call_image"
            android:fontFamily="@font/poppins_regular"
            android:text="Call Notifications "
            android:textColor="@color/grey"
            android:textSize="@dimen/sp_20" />

    </RelativeLayout>

    <View
        android:id="@+id/view_call_notifications"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/group_notifications_relative"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/gray_light" />


</RelativeLayout>