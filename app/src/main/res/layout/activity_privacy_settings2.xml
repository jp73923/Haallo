<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.setting.PrivacySettingsActivityOld">

    <RelativeLayout
        android:id="@+id/relative_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56"
        android:background="@color/colorPrimary">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:fontFamily="@font/poppins_medium"
            android:text="Notifications"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:visibility="visible"
            tools:ignore="RelativeOverlap" />


    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/relative_header"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/gray_light" />


    <RelativeLayout
        android:id="@+id/last_seen_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@+id/view"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/last_seen_img"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:src="@drawable/last_seen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toEndOf="@+id/last_seen_img"
            android:fontFamily="@font/poppins_regular"
            android:text="Last Seen"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp_20" />

    </RelativeLayout>

    <View
        android:id="@+id/view_last_seen"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/last_seen_relative"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/gray_light" />

    <RelativeLayout
        android:id="@+id/profile_picture_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@+id/view_last_seen"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/profile_picture_img"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:src="@drawable/profile_picture" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toEndOf="@+id/profile_picture_img"
            android:fontFamily="@font/poppins_regular"
            android:text="Profile Picture"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp_20" />

    </RelativeLayout>

    <View
        android:id="@+id/view_profile_picture"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/profile_picture_relative"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/gray_light" />

    <RelativeLayout
        android:id="@+id/blocked_contacts_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@+id/view_profile_picture"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/blocked_contacts_img"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:src="@drawable/blocked_contacts" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toEndOf="@+id/blocked_contacts_img"
            android:fontFamily="@font/poppins_regular"
            android:text="Blocked Contacts"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp_20" />

    </RelativeLayout>

    <View
        android:id="@+id/view_blocked_contacts"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/blocked_contacts_relative"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/gray_light" />


    <RelativeLayout
        android:id="@+id/about_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_below="@+id/view_blocked_contacts"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10">

        <ImageView
            android:id="@+id/about_img"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:src="@drawable/about" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_toEndOf="@+id/about_img"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/about"
            android:textColor="@color/grey"
            android:textSize="@dimen/sp_20" />

    </RelativeLayout>

    <View
        android:id="@+id/view_about"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/about_relative"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@color/gray_light" />


</RelativeLayout>