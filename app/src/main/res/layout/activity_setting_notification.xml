                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/label_default_ringtone"
                        android:textColor="@color/colorText"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivArrowMessageNotificationTone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="@dimen/_4sdp"
                    android:src="@drawable/outline_keyboard_arrow_right_24"
                    android:tint="@color/colorIconTint" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/half_dp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:background="@color/md_grey300" />

            <RelativeLayout
