            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/half_dp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:background="@color/md_grey300" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>