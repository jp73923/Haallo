<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvHeading"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/color_1F3257"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_12sdp"
        android:text="@string/label_settings"
        android:textColor="@color/md_white"
        android:textSize="@dimen/_14sdp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_8sdp"
        android:paddingVertical="@dimen/_6sdp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivUserProfile"
            android:layout_width="@dimen/_68sdp"
            android:layout_height="@dimen/_68sdp"
            android:layout_marginStart="@dimen/_6sdp"
            android:src="@drawable/outline_account_circle_24_profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_toStartOf="@+id/ivEdit"
            android:layout_toEndOf="@+id/ivUserProfile"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/label_name"
                android:textColor="@color/md_grey800"
                android:textColorHint="@color/md_grey800"
                android:textSize="@dimen/_14sdp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:hint="@string/label_status"
                android:textColor="@color/md_grey800"
                android:textColorHint="@color/md_grey800"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/ic_setting_edit_story"
            android:tint="@color/md_grey600" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/half_dp"
        android:layout_marginVertical="@dimen/_12sdp"
        android:background="@color/md_grey300" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAccount"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_14sdp"
        android:text="@string/label_account"
        android:textColor="@color/md_grey600"
        android:textSize="@dimen/_12sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/half_dp"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:background="@color/md_grey300" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvPrivacy"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_14sdp"
        android:text="@string/label_privacy"
        android:textColor="@color/md_grey600"
        android:textSize="@dimen/_12sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/half_dp"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:background="@color/md_grey300" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_14sdp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNightMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/switchCompatNightMode"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/label_night_mode"
            android:textColor="@color/md_grey600"
            android:textSize="@dimen/_12sdp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchCompatNightMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

        <!--
            android:button="@drawable/custom_switch_selector"
            android:checked="false"
            android:thumb="@null"
            app:track="@null"-->

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/half_dp"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:background="@color/md_grey300" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvOthers"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_14sdp"
        android:text="@string/label_others"
        android:textColor="@color/md_grey600"
        android:textSize="@dimen/_12sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/half_dp"
        android:layout_marginHorizontal="@dimen/_14sdp"
        android:background="@color/md_grey300" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvLogout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_14sdp"
        android:text="@string/label_logout"
        android:textColor="@color/md_grey600"
        android:textSize="@dimen/_12sdp" />

</LinearLayout>